{
  "name": "typescript-explicit-types",
  "displayName": "TypeScript Explicit Types",
  "description": "Generate explicit type annotation from inferred type in TypeScript",
  "version": "1.0.4",
  "icon": "logo.png",
  "repository": "https://github.com/nick-lvov-dev/typescript-explicit-types",
  "publisher": "boni-dev",
  "private": true,
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:svelte",
    "onCommand:extension.toggleQuotes"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateExplicitType",
        "title": "Generate explicit type"
      },
      {
        "command": "extension.toggleQuotes",
        "title": "Toggle Quote"
      }
    ],
    "configuration": {
      "title": "TypeScript Explicit Types",
      "properties": {
        "typescriptExplicitTypes.preferable": {
          "type": "boolean",
          "default": true,
          "description": "Mark type generation actions as preferable."
        },
        "typescriptExplicitTypes.formatAfterGeneration": {
          "type": "boolean",
          "default": true,
          "description": "Run document format action after a type has been generated."
        },
        "typescriptExplicitTypes.togglequotes.chars": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "\"",
            "'"
          ],
          "description": "The quote characters to toggle between.",
          "scope": "language-overridable"
        }
      }
    },
    "configurationDefaults": {
      "[typescript]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[javascript]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[typescriptreact]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[javascriptreact]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[svelte]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[vue]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[astro]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[markdown]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      },
      "[go]": {
        "typescriptExplicitTypes.togglequotes.chars": [
          "\"",
          "'",
          "`"
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/lodash.uniqwith": "^4.5.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "ajv": "^8.17.1",
    "eslint": "^9.23.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vscode-test": "^1.6.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "lodash.uniqwith": "^4.5.0"
  }
}
